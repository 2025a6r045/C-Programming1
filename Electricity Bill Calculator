#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   
    int unit;
    float p,tax,total;
    scanf("%d",&unit);
    if (unit<=50){
        p=unit*0.50;
    }
    else if (unit<=150){
        p=(50*0.50)+((unit-50)*0.75);
    } 
    else if (unit<=250){
        p=(50*0.50)+(100*0.75)+((unit-150)*1.20);
    }
    else{
        p=(50*0.50)+(100*0.75)+(100*1.20)+((unit-250)*1.50);
    }
    tax=p*0.20;
    total=p+tax;
    printf("%.2f",total);
    return 0;
}
